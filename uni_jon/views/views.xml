<? version="1.0" encoding="UTF-8"?>

<odoo>
    <data>

        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="persona_uni_jon_tree_view">
            <field name="name">persona_uni_jon_tree_view</field>
            <field name="model">persona.uni_jon</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="pid" />
                    <field name="nombre" />
                    <field name="direccion" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="persona_uni_jon_tree_view">
            <field name="name">persona_uni_jon_tree_view</field>
            <field name="model">persona.uni_jon</field>
            <field name="arch" type="xml">
                <form string="Gestión de una persona">
                    <sheet>
                        <group string="Géstion de una persona">
                            <field name="pid"/>
                            <field name="nombre"/>
                            <field name="tlfno"/>
                            <field name="direccion"/>
                            <field name="email"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="persona_uni_jon_tree_view">
            <field name="name">persona_uni_jon_tree_view</field>
            <field name="type"></field>
            <field name="res_model"></field>
            <field name="view_mode"></field>
            <field name="view_type">form</field>
            <menuitem name="UniversidadJon" id="uni_jon_menu_principal"/>
            <menuitem name="Persona" id="uni_eli_submenu" paren="uni_jon_menu_principal"/>
        </record>
    </data>
</odoo>